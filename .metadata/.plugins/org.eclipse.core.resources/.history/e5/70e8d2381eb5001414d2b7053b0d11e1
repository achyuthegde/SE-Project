package convertToFrames;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

import org.jcodec.api.FrameGrab;
import org.jcodec.api.JCodecException;
public class VideoToFrames
{

	/**
	 * @param args
	 * @throws JCodecException 
	 * @throws IOException 
	 */
	public static void main(String[] args) throws IOException, JCodecException
	{
		int frameNumber = 150;
		File f=new File("D:\\movies\\Dawn of the Planet of the Apes (2014)\\Dawn.of.the.Planet.of.the.Apes.2014.720p.BluRay.x264.YIFY.mp4");
		for(int i=0;i<250;i++)
		{
			BufferedImage frame = FrameGrab.getFrame(f, i);
			ImageIO.write(frame, "jpeg", new File("D:\\movies\\Dawn of the Planet of the Apes (2014)\\frame_"+i+".jpg"));
		}
	}

}
